<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_height="313dp"
        android:layout_width="wrap_content"
        android:padding="6dp">
        <ImageView
            android:id="@+id/inImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/kamal_logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/inTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/inOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizador"
            android:layout_below="@id/inTitle"/>

        <RatingBar
            android:id="@+id/inRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_alignTop="@+id/inOrganizer"
            android:layout_toRightOf="@+id/inOrganizer"
            android:layout_toEndOf="@+id/inOrganizer"/>

        <TextView
            android:id="@+id/inPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar"
            android:layout_below="@id/inOrganizer"/>

        <TextView
            android:id="@+id/inShortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shortasdfdasf askdfsajdf m sljf asjod fojashd fojas dojf asojhf asodh fousad fouas dfouasd fuas fuoa sof asofha sasdif asid  ksajdf asdif saidf oas dfas df"
            android:layout_below="@+id/inPlace"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/inImage"
            android:layout_toStartOf="@+id/inImage"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/inShortDesc"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="36dp"
            android:onClick="sendMessage"
            android:text="Button" />
    </RelativeLayout>
</LinearLayout>